services:
  grafana:
    image: grafana/grafana:latest
    container_name: grafana
    restart: unless-stopped
    ports:
      - '3000:3000'
    networks:
      - web
  
  mysql:
    image: mysql:8.0
    container_name: mysql
    restart: unless-stopped
    networks:
      - network-zabbix
    # ports:
      # - '3306:3306'
    volumes:
      - './zabbix/mysql:/var/lib/mysql'
    environment:
      - MYSQL_ROOT_PASSWORD=senha_segura
      - MYSQL_DATABASE=mysql
      - MYSQL_USER=zabbix
      - MYSQL_PASSWORD=zabbix   
      
  zabbix-server:
    container_name: zabbix-server
    image: zabbix/zabbix-server-mysql:latest
    networks:
      - network-zabbix
    restart: unless-stopped
    ports:
      - '10051:10051'
    volumes:
      - './zabbix/alertscripts:/usr/lib/zabbix/alertscripts'
    environment:
      - DB_SERVER_HOST=mysql
      - MYSQL_USER=zabbix
      - MYSQL_PASSWORD=zabbix 
    depends_on:
      - mysql
      
  zabbix-frontend:
	  container_name: zabbix-frontend
	  image: zabbix/zabbix-web-apache-mysql:latest
	  networks:
	    - network-zabbix
	  restart: unless-stopped
	  ports:
	    - '80:8080'
	    - '443:8443'
	  environment:
      - DB_SERVER_HOST=mysql
      - MYSQL_USER=zabbix
      - MYSQL_PASSWORD=zabbix
      - PHP_TZ=America/Sao_Paulo
	  depends_on:
	    - zabbix-server
   
  zabbix-agent:
    container_name: zabbix-agent
	  image: zabbix/zabbix-agent2:latest
	  user: root
	  networks:
	    - network-zabbix
	  restart: unless-stopped
	  privileged: true
	  volumes:
	    - /var/run:/var/run
	  ports:
	    - '10050:10050'
	  environment:
	    - ZBX_HOSTNAME=Zabbix server Docker
	    - ZBX_SERVER_HOST=zabbix-server

networks:
	network-zabbix:
    driver: bridge
  web:
    external: true
